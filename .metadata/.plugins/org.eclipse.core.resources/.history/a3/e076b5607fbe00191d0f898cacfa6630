package server;

import java.io.File;
import java.util.Scanner;

public class Account {
	String user = "";
	String account = "";
	String password = "";
	String filepath = "data.txt";
	
	private static Scanner x;
	
	public static void verify() {
		boolean found = false;
		String tempUser = "";
		String tempAccount = "";
		String tempPassword = "";
		
		try {
			x = new Scanner((Readable) new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				tempUser = x.next();
				tempAccount = x.next();
				tempPassword = x.next();
			}
			
		}catch(Exception e) {
			
		}
		
	}

}
