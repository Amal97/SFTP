package server;

import java.io.File;
import java.util.Scanner;

public class Account {
	static String user = "";
	static String account = "";
	static String password = "";
	static String filepath = "data.txt";
	boolean loggedIn = false;
	
	private static Scanner x;
	
	public boolean isLoggedIn(String user) {
		if(this.user == user) {
			return loggedIn;
		}
		else {
			return false;
		}
	}
	
	public boolean validUser(String user) {
		boolean found = false;
		try {
			String tempUser = "";
			x = new Scanner(new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				tempUser = x.next();
				x.next();
				x.next();
								
				if(tempUser.trim().equals(user.trim())) {
					found = true; 
				}
			}
			x.close();
			System.out.println(found);
			
		}catch(Exception e) {
			System.out.println("Error");
		}
		return found;
	}
	
	public static void verify() {
		boolean found = false;
		String tempUser = "";
		String tempAccount = "";
		String tempPassword = "";
		
		try {
			x = new Scanner(new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				tempUser = x.next();
				tempAccount = x.next();
				tempPassword = x.next();
				
				if(tempUser.trim().equals(user.trim())) {
					found = true; 
				}
			}
			x.close();
			System.out.println(found);
			
		}catch(Exception e) {
			System.out.println("Error");
		}
		
	}

}
