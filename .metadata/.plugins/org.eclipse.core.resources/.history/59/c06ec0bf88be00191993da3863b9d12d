package server;

import java.io.File;
import java.net.URL;
import java.util.Scanner;

public class Account {
	static String user = "";
	static String account = "";
	static String password = "";
	URL path = Account.class.getResource("data.txt");

	static String filepath = "data.txt";
	boolean loggedIn = false;
	
	private static Scanner x;
	
	public boolean isLoggedIn(String user) {
		if(this.user == user) {
			return loggedIn;
		}
		else {
			return false;
		}
	}
	
	public boolean alreadyInAccount() {
		if(account == ""){
			return false;
		}
		return true;
	}
	
	public boolean validPassword(String password) {
		boolean found = false;
		try {
			String tempPassword = "";
			x = new Scanner(new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				x.next();
				x.next();
				tempPassword = x.next();
								
				if(tempPassword.trim().equals(password.trim())) {
					found = true; 
				}
			}
			x.close();
			System.out.println(found);
			
		}catch(Exception e) {
			System.out.println("Error");
		}
		return found;
	}
	
	public boolean validAccount(String account) {
		boolean found = false;
		try {
			String tempAccount = "";
			x = new Scanner(new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				x.next();
				tempAccount = x.next();
				x.next();
								
				if(tempAccount.trim().equals(account.trim())) {
					found = true; 
				}
			}
			x.close();
			System.out.println(found);
			
		}catch(Exception e) {
			System.out.println("Error");
		}
		return found;
	}
	
	public boolean validUser(String user) {
		boolean found = false;
		try {
			String tempUser = "";
			x = new Scanner(new File(filepath));
			x.useDelimiter("[,\n]");
			
			while(x.hasNext() && !found) {
				tempUser = x.next();
				x.next();
				x.next();
								
				if(tempUser.trim().equals(user.trim())) {
					found = true; 
				}
			}
			x.close();
			System.out.println(found);
			
		}catch(Exception e) {
			System.out.println("Error");
		}
		return found;
	}
}
